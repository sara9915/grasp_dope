<launch>
    <!-- run dope -->
    <include file="$(find dope)/launch/dope.launch" />

    <!-- run realsense camera -->
    <include file="$(find realsense2_camera)/launch/rs_camera.launch">
        <arg name="align_depth" value="true" />
        <arg name="depth_width" value="640" />
        <arg name="depth_height" value="480" />
        <arg name="depth_fps" value="30" />
        <arg name="color_width" value="640" />
        <arg name="color_height" value="480" />
        <arg name="color_fps" value="30" />
        <arg name="clip_distance" value="0.8" />
        <arg name="filters" value="pointcloud" />
    </include>

    <!-- run yaskawa moveit configuration -->
    <include file="$(find yaskawa_moveit_config)/launch/demo.launch" />

    <!-- run scene builder node  -->
    <node type="scene_builder_node" name="scene_builder_node" pkg="grasp_dope" />

    <!-- run image_transport to convert compressed image in raw image -->
    <!-- <node type="republish" name="republish_color" pkg="image_transport" args="compressed in:=/camera/color/image_raw _image_transport:=compressed out:=/camera/color/image_raw2" />
    <node type="republish" name="republish_aligned_depth" pkg="image_transport" args="compressed in:=/camera/aligned_depth_to_color/image_raw _image_transport:=compressed out:=/camera/aligned_depth_to_color/image_raw2" /> -->
    <!-- run rviz -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find grasp_dope)/rviz/octomap.rviz" />

    <!-- run trasnform gripper for real robot -0.050628 -0.045628-->
    <node type="tf_gripper" name="tf_gripper_broadcaster" pkg="grasp_dope"/>
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="gripper_broadcaster1" args="-0.048128 -0.160 -0.049 0 0 0 WSG-32_Body_2 Base_Jaw_3" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="gripper_broadcaster2" args="-0.043128 -0.160 -0.026 0 0 0 WSG-32_Body_2 Base_Jaw_4" /> -->
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="gripper_broadcaster1" args="0.059 -0.031 -0.048 0 0 0 WSG-32_Body_2 Base_Jaw_3" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="gripper_broadcaster2" args="0.002499 -0.031 -0.024 0 0 0 WSG-32_Body_2 Base_Jaw_4" /> -->


</launch>
