<launch>
    <!-- run dope -->
    <include file="$(find dope)/launch/dope.launch" />

    <!-- run realsense camera
    <include file="$(find realsense2_camera)/launch/rs_camera.launch">
        <arg name="align_depth" value="true" />
        <arg name="depth_width" value="640" />
        <arg name="depth_height" value="480" />
        <arg name="depth_fps" value="30" />
        <arg name="color_width" value="640" />
        <arg name="color_height" value="480" />
        <arg name="color_fps" value="30" />
        <arg name="clip_distance" value="0.8" />
        <arg name="filters" value="pointcloud" />
    </include> -->

    <!-- run yaskawa moveit configuration -->
    <include file="$(find yaskawa_moveit_config)/launch/demo.launch" />

    <!-- run image_transport to convert compressed image in raw image -->
    <node type="republish" name="republish" pkg="image_transport" args="compressed in:=/camera/color/image_raw _image_transport:=compressed out:=/camera/color/image_raw2" />

    <!-- run rviz -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find grasp_dope)/rviz/octomap.rviz" />

    <!-- run trasnform gripper for real robot -->
    <node type="tf_gripper" name="tf_gripper" pkg="grasp_dope" />
</launch>